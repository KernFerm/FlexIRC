# Federated IRC Server Configuration

# Server Information
SERVER_NAME=my-irc-server
PORT=3000
FEDERATION_PORT=3001

# Known servers to connect to (comma-separated)
# Format: hostname:federation_port or ip:federation_port
# KNOWN_SERVERS=friend1-ip:3001,friend2-ip:3001
# Example: KNOWN_SERVERS=192.168.1.100:3001,example.com:3001
KNOWN_SERVERS=

# Security 
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Admin users
ADMIN_USERS=admin

# Rate Limiting
CONNECTION_LIMIT_POINTS=5
CONNECTION_LIMIT_DURATION=60
MESSAGE_LIMIT_POINTS=30
MESSAGE_LIMIT_DURATION=60
COMMAND_LIMIT_POINTS=10
COMMAND_LIMIT_DURATION=60